load("@rules_rust//rust:defs.bzl", "rust_library", "rust_test")
load("//bazel/portage/build_defs:common.bzl", "RUSTC_DEBUG_FLAGS")

rust_library(
    name = "container",
    srcs = glob(["src/*.rs"]),
    data = [
        "setup.sh",
        "//bazel/portage/bin/run_in_container",
    ],
    proc_macro_deps = [
        "@alchemy_crates//:strum_macros",
    ],
    rustc_flags = RUSTC_DEBUG_FLAGS,
    visibility = ["//bazel:internal"],
    deps = [
        "//bazel/portage/common/durabletree",
        "//bazel/portage/common/fileutil:fileutil_rust",
        "//bazel/portage/common/portage/binarypackage:binarypackage_rust",
        "//bazel/portage/common/processes",
        "//bazel/portage/common/run_in_container_lib",
        "@alchemy_crates//:anyhow",
        "@alchemy_crates//:clap",
        "@alchemy_crates//:itertools",
        "@alchemy_crates//:libc",
        "@alchemy_crates//:nix",
        "@alchemy_crates//:path-absolutize",
        "@alchemy_crates//:scopeguard",
        "@alchemy_crates//:strum",
        "@alchemy_crates//:tar",
        "@alchemy_crates//:tracing",
        "@alchemy_crates//:walkdir",
        "@alchemy_crates//:zstd",
        "@rules_rust//tools/runfiles",
    ],
)

rust_test(
    name = "container_test",
    size = "small",
    crate = ":container",
    data = ["@files//:bash-static"] + glob(["testdata/**"]),
    rustc_flags = RUSTC_DEBUG_FLAGS,
    deps = [
        "//bazel/portage/common/testutil",
    ],
)
