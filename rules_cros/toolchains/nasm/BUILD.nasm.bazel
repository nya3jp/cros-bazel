load("@bazel_skylib//rules:select_file.bzl", "select_file")

package(default_visibility = ["//visibility:public"])

filegroup(
    name = "all_srcs",
    srcs = glob(
        include = ["**"],
        exclude = ["*.bazel"],
    ),
)

select_file(
    name = "nasm",
    srcs = ":all_srcs",
    subpath = "nasm.exe",
)
