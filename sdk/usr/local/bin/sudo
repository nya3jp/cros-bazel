# Simple sudo wrapper to be used in a rootless container


if [[ $# -eq 0 ]]; then
	echo "Usage: sudo <cmd>" >&2
	exit 1
fi

if [[ "$1" == -- ]]; then
	:
elif [[ "$1" == -* ]]; then
	echo "sudo arguments are not supported!" >&2
	exit 1
fi

exec "$@"
