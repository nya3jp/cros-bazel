package(default_visibility = ["//visibility:private"])

py_library(
  name = "libs",
  srcs = glob(["lib/**/*.py"]),
  imports = ["lib"],
)

genrule(
   name = "ebuild_rename",
   srcs = ["bin/ebuild"],
   outs = ["bin/ebuild.py"],
   cmd = "cp $< $@",
)

py_binary(
  name = "ebuild",
  srcs = ["bin/ebuild.py"],
  deps = [":libs"],
  visibility = ["//visibility:public"],
)
