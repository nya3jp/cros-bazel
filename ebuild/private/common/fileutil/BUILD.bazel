load("@rules_rust//rust:defs.bzl", "rust_library", "rust_test")
load("@rules_go//go:def.bzl", "go_library")

go_library(
    name = "fileutil",
    srcs = [
        "copy.go",
        "dualpath.go",
        "move.go",
        "remove.go",
    ],
    importpath = "cros.local/bazel/ebuild/private/common/fileutil",
    visibility = ["//bazel:internal"],
    deps = [
        "@org_golang_x_sys//unix",
    ],
)

rust_library(
    name = "fileutil_rust",
    srcs = glob(["src/*.rs"]),
    crate_name = "fileutil",
    deps = [
        "@alchemy_crates//:anyhow",
        "@alchemy_crates//:libc",
        "@alchemy_crates//:walkdir",
    ],
    visibility = ["//bazel:internal"],
)

rust_test(
    name = "fileutil_rust_test",
    size = "small",
    crate = ":fileutil_rust",
)
