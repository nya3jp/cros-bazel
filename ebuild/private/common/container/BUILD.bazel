load("//bazel/ebuild/private:common.bzl", "RUSTC_DEBUG_FLAGS")
load("@rules_rust//rust:defs.bzl", "rust_library", "rust_test")

rust_library(
    name = "container",
    srcs = glob(["src/*.rs"]),
    data = [
        "setup.sh",
        "//bazel/ebuild/private/cmd/run_in_container",
    ],
    proc_macro_deps = [
        "@alchemy_crates//:strum_macros",
    ],
    rustc_flags = RUSTC_DEBUG_FLAGS,
    visibility = ["//bazel:internal"],
    deps = [
        "//bazel/ebuild/private/common/fileutil:fileutil_rust",
        "//bazel/ebuild/private/common/makechroot",
        "//bazel/ebuild/private/common/portage/binarypackage:binarypackage_rust",
        "//bazel/ebuild/private/common/processes",
        "//bazel/ebuild/private/common/run_in_container_lib",
        "@alchemy_crates//:anyhow",
        "@alchemy_crates//:clap",
        "@alchemy_crates//:itertools",
        "@alchemy_crates//:libc",
        "@alchemy_crates//:nix",
        "@alchemy_crates//:scopeguard",
        "@alchemy_crates//:strum",
        "@alchemy_crates//:tracing",
        "@rules_rust//tools/runfiles",
    ],
)

# If adding test data, do not depend on anything built by build_package.
# eg. //third_party/portage-stable/category/pkg:0
# If you do so, if there's a problem with the container library, the test will
# be unable to build (and therefore you can't even run the test).
rust_test(
    name = "container_test",
    size = "small",
    crate = ":container",
    data = [
        "testdata/mypkg.ebuild",
        "//bazel/sdk:sdk_from_archive",
    ],
    rustc_flags = RUSTC_DEBUG_FLAGS,
    deps = ["//bazel/ebuild/private/common/processes"],
)
