package_set(
    name = "{{ ebuild.version }}_package_set",
    deps = [
        {%- for dep in ebuild.install_set %}
        "{{ dep }}",
        {%- endfor %}
    ],
    visibility = ["//visibility:public"],
)

{% endfor %}
{%- for failure in failures %}
ebuild_failure(
    name = "{{ failure.version }}",
    ebuild = "{{ failure.ebuild_name }}",
    error = """{{ failure.error }}""",
    visibility = ["//visibility:public"],
)
{% endfor %}
