load("@rules_foreign_cc//foreign_cc:defs.bzl", "configure_make")

configure_make(
    name = "squashfuse",
    autogen = True,
    configure_in_place = True,
    configure_options = [
        "--with-lz4=$EXT_BUILD_DEPS/lz4",
        "--with-fuse=$EXT_BUILD_DEPS/fuse",
    ],
    # configure_make creates a directory based on the name of this rule.
    # We use install_prefix=out to ensure it doesn't write to squashfuse
    # This makes it  write to out/squashfuse instead of squashfuse to avoid
    # collision between file and directory.
    install_prefix = "out",
    lib_source = "@squashfuse//:all_srcs",
    out_binaries = ["squashfuse"],
    out_shared_libs = [
        "libfuseprivate.so",
        "libfuseprivate.so.0",
        "libsquashfuse.so",
        "libsquashfuse.so.0",
    ],
    visibility = ["//bazel/ebuild/private/cmd/run_in_container:__pkg__"],
    deps = [
        "//bazel/third_party/fuse",
        "//bazel/third_party/lz4",
    ],
)
